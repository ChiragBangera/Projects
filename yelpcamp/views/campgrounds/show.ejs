<% layout('layout/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3" style="width: 35rem;">
            <img src="<%= camp.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    <%= camp.title.toUpperCase() %>
                </h5>
                <p class="card-text">
                    <%= camp.description %>
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <%= camp.location %>
                </li>
                <li class="list-group-item"><span>Price: &#x20B9</span>
                    <%= camp.price %>/Night
                </li>
                <li class="list-group-item">A third item</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= camp._id %>/editcamp" class="card-link"><button type="button"
                        class="btn btn-primary">Edit Camp</button>
                    <form class="d-inline" method="POST" action="/campgrounds/<%= camp._id %>?_method=DELETE">
                        <button type="button" class="btn btn-danger">Delete Camp</button>
                    </form>
            </div>
        </div>
    </div>
</div>